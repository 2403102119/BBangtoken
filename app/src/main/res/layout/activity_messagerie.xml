<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bbangtoken.tckkj.com.bbangtoken.Activity.MessagerieActivity">
    <RadioGroup
        android:id="@+id/radioGroup"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        >
         <LinearLayout
             android:id="@+id/tab_zhuanzhang"
             android:orientation="vertical"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/tab_more"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="轉賬通知"
                 android:button="@null"
                 android:gravity="center"
                 android:textSize="13sp"
                 android:background="#ffffff"
                 android:textColor="#C3A171"
                 android:drawablePadding="6dp"
                 />
             <ImageView
                 android:id="@+id/zhuanzhang"
                 android:src="@mipmap/huadong"
                 android:layout_width="40dp"
                 android:layout_height="3dp" />
         </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_xitong"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="2dp"
            android:id="@+id/tab_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系統消息"
            android:button="@null"
            android:gravity="center"
            android:textSize="13sp"
            android:background="#ffffff"
            android:textColor="#C3A171"
            android:drawablePadding="6dp"
            />
        <ImageView
            android:id="@+id/xitong"
            android:visibility="gone"
            android:src="@mipmap/huadong"
            android:layout_width="40dp"
            android:layout_height="3dp" />
    </LinearLayout>

    </RadioGroup>
    <FrameLayout
        android:id="@+id/main_content1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="-12dp"
        >

    </FrameLayout>

</LinearLayout>
