<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="bbangtoken.tckkj.com.bbangtoken.Activity.ExchangeActivity">
    <LinearLayout
        android:layout_marginTop="49dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:text="錢包名稱"
          android:textSize="14sp"
          android:textColor="#999999"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
            android:id="@+id/ce_name"
            android:hint="輸入錢包名称"
            android:textColor="#282828"
            android:textCursorDrawable="@null"

            android:background="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="32dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#E5E5E5"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="#282828"
                android:text="錢包地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
                android:id="@+id/ce_site"
                android:hint="輸入錢包地址"
                android:textColor="#282828"
                android:textCursorDrawable="@null"

                android:background="#ffffff"
                android:textSize="14sp"
                android:layout_marginLeft="32dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/im_scan"
                android:src="@mipmap/saoma"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="17dp"
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    <View
        android:background="#E5E5E5"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="#282828"
                android:text="選擇幣種"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:text="BTC"
                android:textColor="#282828"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/select_the_currency"
                android:src="@mipmap/phone_back"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="17dp"
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>
    <View
        android:background="#E5E5E5"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="交易密碼"
                android:textSize="14sp"
                android:textColor="#282828"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
                android:id="@+id/ce_password"
                android:hint="輸入交易密碼"
                android:textColor="#282828"
                android:layout_marginLeft="33dp"
                android:background="#ffffff"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textCursorDrawable="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
    <View
        android:background="#E5E5E5"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/bt_conterl"
        android:layout_marginTop="60dp"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:background="@mipmap/login"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
