<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="bbangtoken.tckkj.com.bbangtoken.Activity.Registration_detailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_marginTop="50dp"
                android:text="18888888888"
                android:textSize="13sp"
                android:textColor="#282828"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:orientation="horizontal">



                <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
                    android:id="@+id/ce_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="輸入驗證碼"
                    android:inputType="phone"
                    android:paddingRight="5dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_code"
                    android:layout_width="60dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/yzm_item"
                    android:text="獲取" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
                    android:id="@+id/ce_new_password"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="輸入新的6位純數字交易密碼"
                    android:inputType="phone|textPassword"
                    android:paddingRight="5dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="11dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">



                <bbangtoken.tckkj.com.bbangtoken.View.ClearEditText
                    android:id="@+id/ce_affim"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="確認交易密碼"
                    android:inputType="phone|textPassword"
                    android:paddingRight="5dp"
                    android:textSize="16sp" />

            </LinearLayout>






            <Button
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:background="@mipmap/login"
                android:text="確定" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
