<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@mipmap/yaoqingma"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="bbangtoken.tckkj.com.bbangtoken.Activity.PopularizeActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ge"
        android:src="@mipmap/white_fanhui"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/im_touxiang"
        android:src="@mipmap/touxiang"
        android:layout_marginTop="38dp"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_name"
        android:text="致命春嬌"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_yonghu"
        android:text=""
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_code"
        android:text="邀請碼: "
        android:textColor="#DCB678"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@mipmap/yaoqing"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:padding="10dp"
            android:layout_width="164dp"
            android:layout_height="164dp">
            <ImageView
                android:id="@+id/im_code"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:id="@+id/searchLayer">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="#00000022"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/ic_sousuo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:hint="鏈接: http://chaojishequ8.com/yAsd1"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:id="@+id/words"/>

            </LinearLayout>
            <TextView
                android:text="複製鏈接"
                android:textColor="#A45C24"
                android:background="#FFA626"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:id="@+id/iv_index_qiehuan"
                android:layout_width="68dp"
                android:layout_height="24dp"
                 />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
