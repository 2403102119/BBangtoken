<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="bbangtoken.tckkj.com.bbangtoken.Activity.AboutActivity">

    <TextView
        android:background="@mipmap/yinying"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <LinearLayout
              android:layout_marginTop="52dp"
              android:layout_marginLeft="23dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/im_logo"
                  android:src="@mipmap/about_logo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:id="@+id/tv_number"
                  android:text="版本号 V1.0"
                  android:layout_marginLeft="13dp"
                  android:textSize="13sp"
                  android:textColor="#222222"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

          </LinearLayout>
        <TextView
            android:id="@+id/tv_about"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="17dp"
            android:textSize="12sp"
            android:textColor="#9297A5"
            android:text="本錢包是多链、跨链一站式数字资产管理钱包。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/language"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="服務與隱私條款"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_width="0dp"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/guayu"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#EAECF1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/about_me"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="軟件版本"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_width="0dp"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_number_item"
                android:text="1.0"
                android:textSize="15sp"
                android:textColor="#222222"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
